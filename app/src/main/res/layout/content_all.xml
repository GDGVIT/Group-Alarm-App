    <!--tools:showIn="@layout/activity_all">-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView
            android:id="@+id/all_all"
            app:cardElevation="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="22dp"
            app:cardBackgroundColor="@color/fabBlue"
            app:cardCornerRadius="21dp">

            <TextView
                android:id="@+id/all_all_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="10dp"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingLeft="49dp"
                android:paddingRight="49dp"
                android:paddingTop="10dp"
                android:text="All"
                android:textColor="#ffffff"
                android:textSize="19sp" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/all_group"
            app:cardElevation="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:layout_marginTop="22dp"
            app:cardCornerRadius="21dp">

            <TextView
                android:id="@+id/all_group_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="10dp"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingTop="10dp"
                android:text="Groups"
                android:textColor="@color/pureBlack"
                android:textSize="19sp" />
        </android.support.v7.widget.CardView>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/my_recycler_view_all_alarms"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
