<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/allCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    app:cardElevation="5dp"
    android:layout_marginBottom="16dp"
    android:layout_marginTop="4dp"
    app:cardCornerRadius="20dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/allColor"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="25sp"
            android:textColor="@color/pureBlack"
            android:textStyle="bold"
            android:text="11:00 AM"/>

        <com.rm.rmswitch.RMSwitch
            android:id="@+id/rmsSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="14dp"
            android:layout_gravity="center"
            app:checked="true"
            app:enabled="true"
            app:forceAspectRatio="false"
            app:switchBkgCheckedColor="#40000000"
            app:switchBkgNotCheckedColor="#40000000"
            app:switchToggleCheckedColor="@color/fabBlue"
            app:switchToggleNotCheckedColor="#000000"
            app:switchDesign="android"/>




    </LinearLayout>



</android.support.v7.widget.CardView>