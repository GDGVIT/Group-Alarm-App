<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".EditAlarmActivity"
    >

    <android.support.v7.widget.CardView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="9dp"
        app:cardElevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/list_grad_purple"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="38dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/alarmTime"
                    android:onClick="setAlarmTime"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:layout_marginTop="13dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:text="11:00 AM"
                    android:textSize="15sp" />

                <com.rm.rmswitch.RMSwitch
                    android:id="@+id/rm_switch1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="14dp"
                    android:layout_marginTop="16dp"
                    app:checked="true"
                    app:enabled="true"
                    app:forceAspectRatio="false"
                    app:switchBkgCheckedColor="#00ffff"
                    app:switchBkgNotCheckedColor="#00ffff"
                    app:switchDesign="android"
                    app:switchToggleCheckedColor="#ffffff"
                    app:switchToggleNotCheckedColor="#000000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/group_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Group Name"
                    android:textSize="12sp"/>
                <Button
                    android:id="@+id/buttonMon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="M"/>

                <Button
                    android:id="@+id/buttonTue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="T"/>

                <Button
                    android:id="@+id/buttonWed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="W"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/buttonThurs"
                    android:text="T"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:id="@+id/buttonFri"
                    android:text="F"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/buttonSat"
                    android:text="S"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/buttonSun"
                    android:text="S"/>
            </LinearLayout>

            <EditText
                android:id="@+id/labelEdittext"
                android:layout_margin="8dp"
                android:hint="Label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:layout_margin="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RingTone Name"
                android:onClick="ringtoneSelect"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="Vibrate"/>



        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>