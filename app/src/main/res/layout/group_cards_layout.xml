<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView android:id="@+id/allCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="16dp"
    android:layout_marginLeft="24dp"
    android:layout_marginRight="24dp"
    app:cardCornerRadius="9dp"
    app:cardElevation="5dp"
    android:clickable="true"
    android:focusable="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <!--Adding linear layout to add gradint color-->
    <LinearLayout
        android:id="@+id/groupColor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/list_grad_purple">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <TextView
                    android:id="@+id/groupName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Group Name"
                    android:textColor="@color/white"
                    android:textSize="29sp"
                    android:textStyle="bold" />

                <com.rm.rmswitch.RMSwitch
                    android:id="@+id/all_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    app:checked="true"
                    app:enabled="true"
                    app:forceAspectRatio="false"
                    app:switchBkgCheckedColor="#40000000"
                    app:switchBkgNotCheckedColor="#40000000"
                    app:switchDesign="android"
                    app:switchToggleCheckedColor="#ffffff"
                    app:switchToggleNotCheckedColor="#000000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                android:id="@+id/firstAlarm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="10 AM"
                android:layout_marginRight="13dp"
                android:gravity="center"
                android:minLines="2"
                android:background="@drawable/circle_textview"
                android:textSize="14sp" />
                <TextView
                    android:id="@+id/secondAlarm"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10 AM"
                    android:layout_marginRight="13dp"
                    android:gravity="center"
                    android:minLines="2"
                    android:background="@drawable/circle_textview"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/thirdAlarm"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="13dp"
                    android:text="10 AM"
                    android:gravity="center"
                    android:minLines="2"
                    android:background="@drawable/circle_textview"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/moreAlarm"
                    android:textColor="@color/pureBlack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10 AM"
                    android:gravity="center"
                    android:minLines="2"
                    android:background="@drawable/circle_white_textview"
                    android:textSize="14sp" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>

