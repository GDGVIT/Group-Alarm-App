<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView android:id="@+id/allCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="25dp"
    android:layout_marginRight="25dp"
    app:cardCornerRadius="9dp"
    app:cardElevation="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <!--Adding linear layout to add gradint color-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/list_grad_purple">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="16dp"
            android:paddingLeft="13dp"
            android:paddingRight="14dp"
            android:paddingTop="13dp"
            android:paddingStart="13dp"
            android:paddingEnd="14dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/groupName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingBottom="3dp"
                    android:text="Group Name"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <com.rm.rmswitch.RMSwitch
                    android:id="@+id/all_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    app:checked="true"
                    app:enabled="true"
                    app:forceAspectRatio="false"
                    app:switchBkgCheckedColor="#00ffff"
                    app:switchBkgNotCheckedColor="#00ffff"
                    app:switchDesign="android"
                    app:switchToggleCheckedColor="#ffffff"
                    app:switchToggleNotCheckedColor="#000000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                android:id="@+id/firstAlarm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10 AM"
                android:gravity="center"
                android:minLines="2"
                android:background="@drawable/circle_textview"
                android:textSize="8sp" />
                <TextView
                    android:id="@+id/secondAlarm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10 AM"
                    android:gravity="center"
                    android:minLines="2"
                    android:background="@drawable/circle_textview"
                    android:textSize="8sp" />
                <TextView
                    android:id="@+id/thirdAlarm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10 AM"
                    android:gravity="center"
                    android:minLines="2"
                    android:background="@drawable/circle_textview"
                    android:textSize="8sp" />
                <TextView
                    android:id="@+id/moreAlarm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10 AM"
                    android:gravity="center"
                    android:minLines="2"
                    android:background="@drawable/circle_textview"
                    android:textSize="8sp" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>

