    <include layout="@layout/content_all" />

    <android.support.design.widget.FloatingActionButton
        app:elevation="3dp"
        android:id="@+id/fabAddAlarm"
        android:onClick="newAlarm"
        app:backgroundTint="@color/fabBlue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_gravity="bottom|center_horizontal"
        app:srcCompat="@drawable/baseline_add_white_18dp" />

    <LinearLayout
        android:layout_gravity="center_horizontal|bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <android.support.design.widget.FloatingActionButton
            app:elevation="3dp"
            android:id="@+id/fabDeleteAlarm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="16dp"
            android:layout_marginRight="12dp"
            android:visibility="invisible"
            app:backgroundTint="@color/fabBlue"
            app:srcCompat="@drawable/bin" />

        <android.support.design.widget.FloatingActionButton
            app:elevation="3dp"
            android:id="@+id/fabCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="16dp"
            android:visibility="invisible"
            app:backgroundTint="@color/selectedGroupGray"
            app:srcCompat="@drawable/cross"/>

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>